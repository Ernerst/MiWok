<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ekasilabalexcdtb.miwok.MainActivity">


        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/tvNumbers"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/holo_orange_dark"

            android:text="Numbers"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvPhrases"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:layout_below="@+id/tvNumbers"
            android:layout_centerHorizontal="true"
            android:background="@android:color/holo_blue_bright"

            android:text="Phrases"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvFamilyMembers"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvPhrases"
            android:background="@android:color/holo_green_dark"

            android:text="Family Members"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvColors"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvFamilyMembers"
            android:background="@android:color/holo_purple"

            android:text="Colors"
            android:textSize="24sp" />
</RelativeLayout>
